@using BakeryTracker.Models;

@if (@Model.Count == 0)
{
  <p>No vendors have been added yet.</p>
}

<h3>Here are all the orders this vendor has placed:</h3>
@if (@Model["orders"].Count == 0)
{
  <p>No orders have been added for this vendor.</p>
}

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.OrderId'>@order.Title</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order to vendor</a></p>
<p><a href='/vendors'>Return to vendors list</a></p>
<p><a href='/'>Return to Main Page</a></p>