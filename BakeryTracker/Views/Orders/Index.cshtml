@using BakeryTracker.Models;

<h1>Bakery Tracker</h1>
@if (Model.Count == 0)
{
  <p>There are no vendors or orders yet.</p>
}
<ul>
  @foreach (Order order in Model)
  {
    <li><a href="/orders/@order.OrderId">@order.Title</a></li>
  }
</ul>

<a href="/orders/new">Add a new order.</a>

<form action="/orders/delete" method="post">
  <button type="submit" name="button">Clear All Orders</button>
</form>